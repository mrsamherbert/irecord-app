{
  "name": "orks-app",
  "id": "uk.org.orks.app",
  "title": "ORKS App",
  "description": "ORKS mobile application.",
  "version": "6.1.1",
  "homepage": "https://orks.org.uk",
  "scripts": {
    "start": "webpack serve --progress --port 8000",
    "build": "NODE_ENV=production webpack",
    "build:production": "npm run clean && npm run build && npx cap sync && npm run build:resources",
    "build:resources": "mkdir -p resources && cp -R other/designs/android resources && cp -R other/designs/*.png resources && npx cordova-res ios --skip-config --resources resources --copy && npx cordova-res android --skip-config --resources resources --copy",
    "deploy": "cp other/demo.html build/ && URL=$(vercel --prod -t $VERCEL_TOKEN --confirm ./build) && CLEAN_URL=$(echo $URL | sed -r \"s/https:\\/\\/(.*)$/\\1/g\") && DEMO_URL=$(echo $CLEAN_URL | sed -r \"s/(.*\\-)[a-z0-9]+\\-flumens(\\.vercel\\.app)$/\\1${BITRISE_BUILD_NUMBER}\\2/g\") && vercel alias set $CLEAN_URL $DEMO_URL -t $VERCEL_TOKEN && envman add --key DEMO_URL --value \"https://$DEMO_URL\"",
    "deploy:production": "bitrise run ci",
    "clean": "rm -rf build resources",
    "test": "jest --silent --passWithNoTests",
    "test:watch": "jest --watchAll",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand --watch test",
    "test:eslint": "eslint src --quiet --ext .jsx --ext .ts --ext .tsx --ext .js && echo '\\033[37;42;1m PASS \\033[00m'",
    "make:species": "cd src/common/data && node make.js"
  },
  "dependencies": {
    "@capacitor-community/camera-preview": "5.0.0",
    "@capacitor/android": "^5.6.0",
    "@capacitor/app": "5.0.6",
    "@capacitor/camera": "^5.0.8",
    "@capacitor/core": "^5.6.0",
    "@capacitor/device": "5.0.6",
    "@capacitor/filesystem": "^5.2.0",
    "@capacitor/geolocation": "5.0.6",
    "@capacitor/haptics": "5.0.6",
    "@capacitor/ios": "^5.6.0",
    "@capacitor/keyboard": "^5.0.7",
    "@capacitor/network": "5.0.6",
    "@capacitor/splash-screen": "5.0.6",
    "@capacitor/status-bar": "5.0.6",
    "@flumens/bigu": "0.4.0",
    "@flumens/ionic": "2.0.0-alpha.31",
    "@ionic-native/core": "5.36.0",
    "@ionic-native/launch-review": "^5.36.0",
    "@ionic/core": "^7.6.2",
    "@ionic/react": "^7.6.2",
    "@ionic/react-router": "^7.6.2",
    "@sentry/browser": "^7.90.0",
    "@sentry/integrations": "^7.90.0",
    "@turf/distance": "^6.5.0",
    "axios": "^1.6.2",
    "clsx": "2.0.0",
    "cordova-launch-review": "4.0.1",
    "cordova-plugin-device": "2.1.0",
    "cordova-sqlite-storage": "6.1.0",
    "deep-diff": "1.0.2",
    "formik": "^2.4.5",
    "i18next": "^23.7.11",
    "ionicons": "^7.2.2",
    "json-stable-stringify": "^1.1.0",
    "jwt-decode": "^4.0.0",
    "leaflet": "1.9.4",
    "localforage-cordovasqlitedriver": "1.8.0",
    "lodash.mergewith": "4.6.2",
    "mobx": "^6.12.0",
    "mobx-react": "7.5.0",
    "mobx-utils": "6.0.8",
    "mock-geolocation": "1.0.11",
    "proj4": "^2.9.2",
    "proj4leaflet": "^1.0.2",
    "react": "18.2.0",
    "react-autosuggest": "10.1.0",
    "react-dom": "18.2.0",
    "react-easy-crop": "^5.0.4",
    "react-i18next": "^13.5.0",
    "react-map-gl": "^7.1.7",
    "react-router": "5.3.4",
    "react-router-dom": "5.3.4",
    "react-window": "^1.8.10",
    "swiper": "^11.0.5",
    "yup": "^1.3.3"
  },
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@babel/plugin-proposal-private-property-in-object": "7.21.11",
    "@babel/plugin-syntax-dynamic-import": "7.8.3",
    "@babel/plugin-transform-exponentiation-operator": "^7.23.3",
    "@babel/plugin-transform-runtime": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "@babel/preset-react": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "@capacitor/cli": "^5.6.0",
    "@flumens/eslint-config": "^2.0.1",
    "@flumens/prettier-config": "0.2.3",
    "@flumens/webpack-config": "^5.3.1",
    "@types/jest": "^29.5.11",
    "@types/leaflet": "^1.9.8",
    "@types/lodash.mergewith": "^4.6.9",
    "@types/proj4": "^2.5.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/react-router": "^5.1.20",
    "@types/react-router-dom": "5.3.3",
    "@types/react-window": "^1.8.8",
    "babel-eslint": "10.1.0",
    "babel-jest": "^29.7.0",
    "babel-plugin-module-resolver": "^5.0.0",
    "cordova-res": "^0.15.4",
    "dotenv": "^16.3.1",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-transform-stub": "2.0.0",
    "sinon": "^8.0.4",
    "tailwindcss": "^3.4.0",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "vercel": "^33.0.1",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "engines": {
    "node": ">=12",
    "npm": ">=6"
  },
  "author": {
    "name": "Flumens",
    "email": "enquiries@flumens.io",
    "url": "https://flumens.io"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ERCCIS/orks-app"
  },
  "bugs": {
    "url": "https://github.com/ERCCIS/orks-app/issues"
  },
  "licenses": [
    {
      "type": "GNU GPL v3",
      "url": "http://www.gnu.org/licenses/gpl.html"
    }
  ],
  "keywords": [
    "orks",
    "irecord",
    "biological",
    "recording",
    "mobile",
    "app",
    "offline",
    "ceh",
    "brc"
  ],
  "babel": {
    "assumptions": {
      "setPublicClassFields": true
    },
    "presets": [
      [
        "@babel/react",
        {
          "runtime": "automatic"
        }
      ],
      [
        "@babel/env",
        {
          "targets": {
            "android": "5.1",
            "ios": "10.2"
          },
          "loose": true,
          "modules": "commonjs",
          "corejs": "3.0.0",
          "useBuiltIns": "usage"
        }
      ],
      [
        "@babel/typescript",
        {
          "allowDeclareFields": true
        }
      ]
    ],
    "plugins": [
      [
        "@babel/transform-runtime",
        {
          "regenerator": true
        }
      ],
      [
        "module-resolver",
        {
          "root": [
            "./src"
          ],
          "alias": {
            "@flumens$": "./src/common/flumens",
            "common": "./src/common",
            "helpers": "./src/common/helpers",
            "models": "./src/common/models",
            "Components": "./src/common/Components"
          }
        }
      ],
      [
        "@babel/proposal-private-property-in-object",
        {
          "loose": true
        }
      ],
      "@babel/transform-exponentiation-operator",
      "@babel/syntax-dynamic-import"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@flumens",
      "plugin:react/jsx-runtime"
    ],
    "rules": {
      "react/function-component-definition": 0,
      "arrow-body-style": 0,
      "camelcase": 0,
      "jsx-a11y/no-noninteractive-element-interactions": 0,
      "prefer-arrow-callback": 0,
      "react/no-unused-class-component-methods": 0,
      "sort-class-members/sort-class-members": 0,
      "react/prop-types": 0,
      "react/jsx-no-useless-fragment": 0,
      "@typescript-eslint/no-empty-function": 0,
      "@typescript-eslint/no-explicit-any": 0,
      "react/jsx-no-bind": 0,
      "class-methods-use-this": 0,
      "@typescript-eslint/no-var-requires": 0,
      "no-restricted-exports": 0,
      "default-param-last": 0,
      "@typescript-eslint/no-this-alias": 0,
      "jest/valid-expect": 0,
      "jest/expect-expect": 0,
      "jest/no-done-callback": 0,
      "jest/no-conditional-expect": 0,
      "@getify/proper-arrows/name": 0
    }
  },
  "prettier": "@flumens/prettier-config",
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.(t|j)sx?$": [
        "babel-jest",
        {
          "presets": [
            [
              "@babel/env",
              {
                "loose": true
              }
            ]
          ]
        }
      ]
    },
    "testRegex": "src.*((\\.|/*.)(test))\\.(t|j)s?$",
    "moduleNameMapper": {
      "^.+.(css|style|less|sass|scss|svg|png|jpg|ttf|woff|woff2)$": "jest-transform-stub",
      "ionic-native": "jest-transform-stub",
      "swiper": "jest-transform-stub"
    },
    "moduleDirectories": [
      "node_modules",
      "components",
      "src"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/test/setupTests.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!@ionic|@stencil|ionicons)"
    ]
  }
}
